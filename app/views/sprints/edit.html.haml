  = render "sprint_summary", sprint: @sprint
- page_container "container-fluid"

- content_for :javascript do
  = javascript_tag "App.initSprints({currentTeammateId: #{current_account.teammate.try(:id) || "null"}});"

%h3 Team
= render "teammate_selector", teammates: @teammates

%br
%br
%h3 Tasks
= render "task_table", task_table: @task_table
= render "create_task_form",  task: @new_task
= render "update_task_form",  task: @new_task
= render "destroy_task_form", task: @new_task
