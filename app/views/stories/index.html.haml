- page_title "Product Backlog", size: "span5"
- page_description size: "span7" do
  %p test

- content_for :javascript do
  = javascript_tag "App.initStories({newAttributes: #{@new_story.to_json}, effects: #{effects.to_json}});"

- cache [@stories, @velocity] do
  %p The ordered list of "requirements" that is maintained for your product.

  - if @stories.empty?
    %table.table.table-bordered
      %tbody.table
        %tr
          %td
            %p
              There are no stories in the backlog yet.
              &nbsp;
              %a.btn.btn-primary.new-story-button(href) Create first story
  - else
    %p
      You can mouse over a story to reveal a story management button or &nbsp;
      %a.btn.btn-primary.new-story-button(href) Create a story
    %br
    %table.table.table-hover.hidden-commands
      %colgroup
        %col(width="30px")
        %col(span="2" width="75px")
        %col(width="60px")
        %col(width="300px")
        %col(width="30px")
        %col(width="150px")
      %thead.table
        %tr
          %th Id
          %th Tech lead
          %th PM
          %th Driver
          %th User story
          %th Points
          %th Spec
      %tbody#stories.table
        - @stories.each.with_index do |story, index|
          = render "velocity_bar", velocity: @velocity if index == 0 && @velocity.index == 0
          - cache story do
            = render "story_row", story: story, index: index
          = render "velocity_bar", velocity: @velocity if @velocity.index == index + 1
  = render "editor", id: "new-story-editor", story: @new_story

- if @story.present?
  - cache @story do
    = render "editor", id: "show-now", story: @story
