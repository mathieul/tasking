%h2 Sign In

%br
= simple_form_for @session, url: sessions_path, defaults: {input_html: {autocomplete: "off"}} do |f|
  %fieldset
    %legend Welcome back
    = f.error_notification

    = f.input :email, html: {class: "span6"}
    = f.input :password, html: {class: "span6"}
    = f.input :remember_me, as: :boolean,
                            label: false,
                            inline_label: "Remember me",
                            html: {class: "span6"}

    %br
    = f.button :submit, "Sign In", class: "btn-primary"
    or
    = link_to "forgotten password?", new_password_reset_path
